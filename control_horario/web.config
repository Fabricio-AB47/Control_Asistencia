<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <!-- Ensure PHP runs via FastCGI with the same path defined in public/web.config -->
        <fastCgi>
            <application fullPath="C:\php\php-cgi.exe">
                <environmentVariables>
                    <environmentVariable name="PHPRC" value="C:\php" />
                </environmentVariables>
            </application>
        </fastCgi>

        <handlers>
            <remove name="PHP_via_FastCGI" />
            <add name="PHP_via_FastCGI" path="*.php" verb="*" modules="FastCgiModule" scriptProcessor="C:\php\php-cgi.exe" resourceType="Either" requireAccess="Script" />
        </handlers>

        <defaultDocument enabled="true">
            <files>
                <add value="index.php" />
                <add value="default.php" />
            </files>
        </defaultDocument>

        <directoryBrowse enabled="false" />
    </system.webServer>
</configuration>
